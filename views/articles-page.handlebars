{{>nav}}
<section>
	<h1>{{this.article.title}}</h1>
	<img src="{{this.article.image}}" width="100%" height="100%">
	</div>
	<h2>Comments</h2> 
	<div>
	<form id="comment-form" action="/articles/{{this.article._id}}" method="post"> 
	  <input type="text" id="comment-name" name="name" placeholder="Name">
	  <br>
	  <textarea rows="5" id="comment-body" name="body" placeholder="Make a Comment!"></textarea>
	  <br>
	  <input type="submit" data-id="{{this.article._id}}" id="submit-comment" value="Submit" class="whitewashed blue-button">
	</form>
	<div id="comment-div">
		{{#each this.article.comment}}
			<a href="/articles/{{this._id}}/delete" class="blue-button whitewashed delete">X</a>
		 	<span class="date">{{this.dateCreated}}</span>
			<p class="name"><img src="/assets/images/comment_paw.jpg">{{this.name}}<p>
			<p class="body">{{this.body}}<p>
			<hr>
		{{/each}}
	</div>
</section>